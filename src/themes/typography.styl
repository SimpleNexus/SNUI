// FONT FAMILY
$font-family = 'Barlow', 'Roboto', 'Arial', sans-serif
$font-family-condensed = 'Barlow Condensed', sans-serif

// FONT WEIGHTS
$font-weight-extra-light = 200
$font-weight-light = 300
$font-weight-regular = 400
$font-weight-medium = 500
$font-weight-semi-bold = 600
$font-weight-bold = 700

// FONT SIZE
$font-size-display-1 = 80px
$font-size-display-2 = 60px
$font-size-display-3 = 48px
$font-size-large-title = 34px
$font-size-title-1 = 28px
$font-size-title-2 = 22px
$font-size-title-3 = 20px
$font-size-headline = 17px
$font-size-body = 17px
$font-size-callout = 16px
$font-size-subhead = 15px
$font-size-footnote = 13px
$font-size-caption-1 = 12px
$font-size-caption-2 = 11px

