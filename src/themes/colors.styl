/*
  Base Colors
*/
:root
  --snui-color-white 255, 255, 255
  --snui-color-black 0, 0, 0
  --snui-color-grey 155, 155, 155
  --snui-color-red 212, 64, 17
  --snui-color-orange 242, 159, 90
  --snui-color-green 36, 212, 154
  --snui-color-brand 254, 186, 1

resolveColorVar(v)
  s("rgb(var(%s))", v)


// White
$sn-white-var = --snui-color-white
$sn-white = resolveColorVar($sn-white-var)
// Black
$sn-black-var = --snui-color-black
$sn-black = resolveColorVar($sn-black-var)

// Grey
$sn-grey-var = --snui-color-grey
$sn-grey = resolveColorVar($sn-grey-var)

// Red
$sn-red-var = --snui-color-red
$sn-red = resolveColorVar($sn-red-var)

// Orange
$sn-orange-var = --snui-color-orange
$sn-orange = resolveColorVar($sn-orange-var)

// Green
$sn-green-var = --snui-color-green
$sn-green = resolveColorVar($sn-green-var)

// Brand
$sn-brand-var = --snui-color-brand
$sn-brand = resolveColorVar($sn-brand-var)

/*
  More usable vars
*/
// Primary
$primary-var = $sn-black-var
$primary = resolveColorVar($primary-var)
// White
$white-var = $sn-white-var
$white = resolveColorVar($white-var)
// Secondary
$secondary-var = $sn-grey-var
$secondary = resolveColorVar($secondary-var)
// Warning
$warning-var = $sn-red-var
$warning = resolveColorVar($warning-var)
// Caution
$caution-var = $sn-orange-var
$caution = resolveColorVar($caution-var)
// Success
$success-var = $sn-green-var
$success = resolveColorVar($success-var)
// Accent
$accent-var = $sn-brand-var
$accent = resolveColorVar($accent-var)


$disabled-opacity = .2

// Helpers for adding opacity
lighten1(c)
  s("rgba(var(%s), .75)", c)

lighten2(c)
  s("rgba(var(%s), .50)", c)

lighten3(c)
  s("rgba(var(%s), .25)", c)

disable(c)
  s("rgba(var(%s), %s)", c, $disabled-opacity)

/**
  Text Classes
 */

.sn-text
  color $white

.sn-text-primary
  color $primary
  &--lighten-1
      color lighten1($primary-var)
  &--lighten-2
      color lighten2($primary-var)
  &--lighten-3
      color lighten3($primary-var)

.sn-text-secondary
  color $secondary
  &--lighten-1
    color lighten1($secondary-var)
  &--lighten-2
    color lighten2($secondary-var)
  &--lighten-3
    color lighten3($secondary-var)

