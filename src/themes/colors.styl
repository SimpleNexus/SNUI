  &--lighten-2
    background-color $caution-lighten-2

  &--lighten-3
    background-color $caution-lighten-3

  &--lighten-4
    background-color $caution-lighten-4

.sn-background-success
  background-color $success

  &--lighten-1
    background-color $success-lighten-1

  &--lighten-2
    background-color $success-lighten-2

  &--lighten-3
    background-color $success-lighten-3

  &--lighten-4
    background-color $success-lighten-4

.sn-background-accent
  background-color $accent

.sn-background-white
  background-color $white
